            , <&key_physical_attrs  50  50  925  375       0     0     0>
            ;
	};

    position_map {
        compatible = "zmk,physical-layout-position-map";

        layout_aeliux_4 {
            physical-layout = <&layout_aeliux_4>;
            positions = <>;
        };
    };

    aliases {
        led-red = &led0; 
        led-blue = &led1;
        led-green = &led2;
    };

    leds {
        compatible = "gpio-leds";
        status = "okay";
        led0: led_0 {
            gpios = <&gpio1 1 (GPIO_ACTIVE_LOW)>;  // red LED, connected to P1.01
        };
        led1: led_1 {
            gpios = <&gpio1 2 (GPIO_ACTIVE_LOW)>;  // yellow (blue) LED, connected to P1.02
        };
        led2: led_2 {
            gpios = <&gpio1 7 (GPIO_ACTIVE_LOW)>;  // green LED, connected to P1.07
        };
